@import "nib"
@import "font-awesome/index"
@import "_grid"
@import "variables"
@import "fonts"
@import "animations"

body
    font-family 'Fira Sans', sans-serif
    font-size 14px
    color #222
    background-color #FFF
    margin 0

.ಠ_ಠ
    width: auto;
    // max-width: 960px;
    float: none;
    display: block;
    margin-right: auto;
    margin-left: auto;
    padding-left: 0;
    padding-right: 0;

.logo
    // background-color #F5F5F9
    margin 1em auto
    svg
        width 100%
        height (400px/14px)em

#logo
    .circle_top
        animation circle_top 3s ease forwards
        stroke-dasharray animation-circle-top
        stroke-dashoffset animation-circle-top

    .circle_bottom
        animation circle_bottom 3s ease forwards
        stroke-dasharray animation-circle-bottom
        stroke-dashoffset animation-circle-bottom

    .triangle_top
        animation triangle_top 3s ease forwards
        stroke-dasharray animation-triangle-top
        stroke-dashoffset animation-triangle-top

    .triangle_bottom
        animation triangle_bottom 3s ease forwards
        stroke-dasharray animation-triangle-bottom
        stroke-dashoffset animation-triangle-bottom

header
    // background-color #00B1E1
    // color #FFF
    padding 1em
    text-align center
    h1
        font-weight 500
        font-size 5.8em
        line-height 1em
        margin 0.5em 0 0
    h2
        font-weight 300
        font-size 2.8em
        margin 0 auto
.me
    text-align center
    a
        color #000000
        border-radius 6px
        font-size 1.4em
        font-weight 200
        padding 10px 16px
        text-decoration none
        transition background-color 0.4s ease-out, color 0.3s linear
        &:hover
            background-color #1BA1E2
            color #FFFFFF
    .mail
        &:hover
            background-color #4285f4
    .twitter
        &:hover
            background-color #55acee
    .github
        &:hover
            background-color #4183c4
    .linkedin
        &:hover
            background-color #0976b4
    .stack-overflow
        &:hover
            background-color #fe7a15
    .vsco
        &:hover
            background-color #a8a749
    a
        span
            display none
            margin-left 0.2em
            opacity 0
            transition opacity 0.1s ease

@media only screen and (max-width : 480px)
    .ಠ_ಠ
        margin auto

    header
        padding 0.1em 1em 1em
        h1
            font-size 4.2em
            margin 0
        h2
            font-size 1.8em
            line-height 1em
    .logo
        padding 1em
        margin 0
        svg
            width 100%
            height (300/14px)em
    .about
        column(12)
    .blog
        column(12)


@media only screen and (min-width: 480px)
    h3
        text-align center
        margin 1em auto

    header
        // background-color #00B1E1
        // color #FFF
        padding 1em
        text-align center
        h1
            font-weight 500
            font-size 5.8em
            line-height 1em
            margin 0.5em 0 0
        h2
            font-weight 300
            font-size 2.8em
            margin 0 auto
    .me
        a
            &:hover span
                display inline
                opacity 1
